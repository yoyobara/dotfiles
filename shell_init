# update PATH
export PATH="${PATH}:${HOME}/.local/bin:${HOME}/scripts"

# aliases
alias xo='xdg-open'
alias .='source'
alias httpserver='python3 -m http.server'
alias rm='rm -i'

###  useful bash shit ###

# find files that contains something in their filename
findwith(){
	find . -iname "*$1*" ;
}

# create directory AND move files to it
# usage:
#	mkdirmov <new-dir-name> [files...]
mkdirmv() {
	mkdir $1
	mv "${@:2}" $1
}
