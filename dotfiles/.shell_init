# update PATH
export PATH="${PATH}:${HOME}/.local/bin:${HOME}/scripts"

# source file of secret environment variables
[[ -f ".secret_env" ]] && source .secret_env

# aliases
alias xo='xdg-open'
alias .='source'
alias rm='rm -i'
alias hack_nasa='cmatrix'

# pacman alias
alias pacman-remove-orphans='sudo pacman -Rns $(pacman -Qdtq)'

# ls aliases
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -al'

# desktop environment alias
alias session_type='echo $XDG_SESSION_TYPE'

###  useful bash shit ###

# find files that contains something in their filename
findwith(){
	find . -iname "*$1*" ;
}

system_update() {
    command -v pacman && sudo pacman -Syu --noconfirm
    command -v dnf && sudo dnf update -y
    
    command -v flatpak && flatpak update -y
}

# create directory AND move files to it
# usage:
#	mkdirmov <new-dir-name> [files...]
mkdirmv() {
	mkdir $1
	mv "${@:2}" $1
}

httpserver() {
    echo "starting file-serving http server at $(hostname -I) port 8000"
    python3 -m http.server
}
